# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/lai

# LLM Provider: ollama | lmstudio | gateway
LLM_PROVIDER=lmstudio
LLM_MODEL=qwen/qwen3-8b
LLM_PROVIDER_URL=http://localhost:1234/v1

# Embedding Provider (defaults to LLM_PROVIDER if not set)
EMBEDDING_PROVIDER=lmstudio
EMBEDDING_MODEL=text-embedding-nomic-embed-text-v1.5
EMBEDDING_PROVIDER_URL=http://localhost:1234/v1

# AI Gateway (if using gateway provider)
AI_GATEWAY_API_KEY=

